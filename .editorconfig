root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Disable formatting for Helm templates and Kubernetes manifests
[helm/templates/**.{yaml,tpl}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false

[*.{yaml,yml}]
indent_style = space
indent_size = 2