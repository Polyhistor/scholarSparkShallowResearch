# Application Configuration
PORT=8000
API_PATH=/api/v1
DEBUG=true

# Service Identity
SERVICE_NAME=shallowresearchscholarspark
SERVICE_VERSION=0.1.0
ENVIRONMENT=development

# Security
JWT_SECRET_KEY=change-this-in-production
CORS_ORIGINS=["http://localhost:3000"]

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=shallowresearchscholarspark
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# Observability Configuration
## OpenTelemetry Settings
OTEL_SERVICE_NAME=${SERVICE_NAME}
OTEL_SERVICE_VERSION=${SERVICE_VERSION}
OTEL_ENVIRONMENT=${ENVIRONMENT}
OTEL_DEBUG=true

## Tracing (Tempo/Jaeger)
OTEL_TEMPO_ENDPOINT=http://tempo:4318/v1/traces
TRACES_ENDPOINT=http://localhost:3200

## Logging (Loki)
LOGGING_APP=loki
LOGS_ENDPOINT=http://localhost:3100

# Kubernetes & Helm Configuration
K8S_NAMESPACE=${ORGANIZATION_PREFIX}-${ENVIRONMENT}
HELM_REGISTRY=ghcr.io
ORGANIZATION_PREFIX=scholarspark

# Resource Limits
MEMORY_LIMIT=512Mi
CPU_LIMIT=500m
MEMORY_REQUEST=256Mi
CPU_REQUEST=250m